<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:backgroundTint="@color/buttonBorder"
    app:cardCornerRadius="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        android:background="@color/buttonDefault">

        <TextView
            android:id="@+id/logoRecyclerView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/image_preview"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="37sp"
            android:layout_margin="5dp" />

        <TextView
            android:id="@+id/titleTextFieldRecyclerView"
            android:layout_width="198dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/dateAndTimeTextFieldRecyclerView"
            android:layout_width="71dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>